<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Web" >
    <Resource
        type="javax.sql.DataSource"
        auth="Container"
        name="jdbc/Banco"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/Banco"
        username="root"
        password="root"
        
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        validationQuery="SELECT 1 FROM dual"
    />
</Context>
